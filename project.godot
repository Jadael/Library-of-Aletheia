; Engine configuration file.
; It's best edited using the editor UI and not directly,
; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=5

[addons]

markdown_book/docs_folder="res://documents"

[application]

config/name="Library of Aletheia"
config/description="An LLM-powered, heavily user extensible system built in Godot for reading/writing/creating/managing Markdown documents with YAML Frontmatter, and applying both traditional and LLM-powered information management tasks."
run/main_scene="res://main.tscn"
config/use_custom_user_dir=true
config/custom_user_dir_name="Library of Aletheia"
config/features=PackedStringArray("4.3", "GL Compatibility")
run/max_fps=60
run/low_processor_mode=true
boot_splash/bg_color=Color(0, 0, 0, 1)
boot_splash/image="res://assets/icon.png"
config/icon="res://assets/icon.svg"
config/macos_native_icon="res://assets/icon.icns"
config/windows_native_icon="res://assets/icon.ico"

[autoload]

Aegis="*res://daemons/aegis.gd"
AlertResponseDaemon="*res://daemons/alert_response_daemon.gd"
Aletheia="*res://daemons/aletheia.gd"
Archivist="*res://daemons/archivist.gd"
AuditDaemon="*res://daemons/audit_daemon.gd"
Chronicler="*res://daemons/chronicler.gd"
Curator="*res://daemons/curator.gd"
Glyph="*res://daemons/glyph.gd"
Librarian="*res://daemons/librarian.gd"
Scribe="*res://daemons/scribe.gd"
SecurityAnalysisDaemon="*res://daemons/security_analysis_daemon.gd"
SecurityBriefingDaemon="*res://daemons/security_briefing_daemon.gd"
SecurityProtocolDaemon="*res://daemons/security_protocol_daemon.gd"
Shoggoth="*res://daemons/shoggoth.gd"
ThreatAnalysisDaemon="*res://daemons/threat_analysis_daemon.gd"

[editor_plugins]

enabled=PackedStringArray("res://addons/Todo_Manager/plugin.cfg")

[input]

summon_chronicle_viewer={
"deadzone": 0.5,
"events": [Object(InputEventKey,"resource_local_to_scene":false,"resource_name":"","device":-1,"window_id":0,"alt_pressed":false,"shift_pressed":false,"ctrl_pressed":false,"meta_pressed":false,"pressed":false,"keycode":0,"physical_keycode":96,"key_label":0,"unicode":96,"location":0,"echo":false,"script":null)
]
}

[rendering]

renderer/rendering_method="gl_compatibility"
renderer/rendering_method.mobile="gl_compatibility"
environment/defaults/default_clear_color=Color(0.02, 0.0196133, 0.0196, 1)
